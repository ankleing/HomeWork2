<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#675F5F"
                android:text="  Hello TableLayout"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222"
                android:gravity="left"
                android:text="      Open...                                                     Ctrl-O    "
                android:textColor="#675F5F"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222"
                android:gravity="left"
                android:text="      Save...                                                      Ctrl-S    "
                android:textColor="#675F5F"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222"
                android:gravity="left"
                android:text="      Save AS...                                       Ctrl-Shift-S    "
                android:textColor="#675F5F"
                android:textSize="20dp" />
            <LinearLayout
                android:id="@+id/completed_wrap"
                android:layout_width="33dip"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
            </LinearLayout>
            <TextView
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222"
                android:gravity="left"
                android:text="   X Import...                                "
                android:textColor="#675F5F"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222"
                android:gravity="left"
                android:text="   X IExport...                                                  Ctrl-E "
                android:textColor="#675F5F"
                android:textSize="20dp" />
            <LinearLayout
                android:id="@+id/completed_wrap2"
                android:layout_width="33dip"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
            </LinearLayout>
            <TextView
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222"
                android:gravity="left"
                android:text="       Quit...                        "
                android:textColor="#675F5F"
                android:textSize="20dp" />

        </TableLayout>





</androidx.constraintlayout.widget.ConstraintLayout>